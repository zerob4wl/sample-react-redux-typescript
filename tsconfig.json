{
  "compilerOptions": {
    "importHelpers": true,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    // we can import module that doesn't have default import - no need for import * as React from 'react
    "allowSyntheticDefaultImports": true,
    // Help jest to work with allowSyntheticDefaultImports: true config
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "target": "esnext",
    "module": "esnext",
    /* For fork-ts-checker-webpack-plugin to skipLibCheck (ts-loader has this option true by default)*/
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}
