// .babelrc
{
  "presets": [
    "@babel/react",
    "@babel/env",
    "@babel/typescript"
  ],
  "plugins": [
    "emotion",
    ["@babel/proposal-decorators", { "legacy": true }],
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    "react-hot-loader/babel",
    "lodash",
    ["transform-imports", {
      "react-router": {
        "transform": "react-router/${member}",
        "preventFullImport": true
      }
    }]
  ]
}
